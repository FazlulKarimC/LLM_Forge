{
    "name": "llmforge",
    "private": true,
    "scripts": {
        "dev": "concurrently --names \"backend,frontend\" --prefix-colors \"cyan,magenta\" \"npm run dev:backend\" \"npm run dev:frontend\"",
        "dev:backend": "npm --prefix backend run dev",
        "dev:frontend": "npm --prefix frontend run dev"
    },
    "devDependencies": {
        "concurrently": "^9.1.2"
    }
}
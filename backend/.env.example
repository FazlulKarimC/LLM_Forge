# ============================================================
# LlmForge Backend - Environment Variables
# ============================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
# ============================================================

# --- Database (NeonDB - free tier) ---
DATABASE_URL='postgresql://user:password@ep-xxx.region.neon.tech/dbname?sslmode=require'

# --- Vector Database (Qdrant - for RAG) ---
# QDRANT_URL="https://your-cluster.qdrant.tech"
# QDRANT_API_KEY="your-qdrant-api-key"

# --- CORS / Security ---
# Comma-separated list of allowed origins. Add your Vercel/frontend domain here.
# CORS_ORIGINS="http://localhost:3000,https://your-frontend.vercel.app"

# --- HuggingFace Inference API (free tier) ---
HF_TOKEN='hf_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx'

# --- Inference Engine ---
# Options: 'mock' (local testing, no API calls) | 'hf_api' (real HF inference)
INFERENCE_ENGINE='mock'

# --- Background Jobs (Upstash Redis - free tier) ---
UPSTASH_REDIS_REST_URL="https://your-instance.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-upstash-rest-token"
REDIS_URL="rediss://default:your-token@your-instance.upstash.io:6379"
